{
  "expo": {
    "name": "Food Track",
    "slug": "food-track-react-native",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "foodtrackreactnative",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brunomartinezciompi.foodtrack",
      "darkIcon": "./src/assets/icon-dark.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#FFF5F0",
        "darkBackgroundColor": "#1C1917",
        "darkForegroundImage": "./src/assets/adaptive-icon-dark.png"
      },
      "package": "com.brunomartinezciompi.foodtrack"
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      "expo-asset",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#F4E5D3",
          "image": "./src/assets/splash-icon.png",
          "resizeMode": "contain",
          "dark": {
            "backgroundColor": "#1C1917",
            "image": "./src/assets/splash-icon.png"
          }
        }
      ],
      "react-native-edge-to-edge",
      "expo-secure-store"
    ]
  }
}
